<body>
    <script>
        let arr = [
            [1, 3, 4],
            [3, 4, 5],
            [5, 5, 6]
        ];
          for ( i = 0 ; i < arr.length; i++){
            let max = arr[i][0];
            for( j =0 ; j < arr[i].length;j++){
                if( arr[i][j] > max ){
                    max = arr[i][j]
                }
            } console.log( " giá trị lớn nhất tại hàng : " + i + " là " + max)
          }
    </script>
</body>

