    <script>
         let arr = [
        [1, 3, 4],
        [3, 4, 5],
        [5, 5, 6]
    ];
     for ( let j = 0; j < arr[0].length; j++){
        let tong = 0 
            for( let i = 0; i < arr.length; i++){
                tong = tong + arr[i][j]
            }
         console.log (" tổng các cột " + j + " là :" + tong)
     }
    </script>
