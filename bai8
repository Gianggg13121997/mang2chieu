<body>
    <script>
        let arr = [
            [1, 3, 4],
            [3, 4, 5],
            [5, 5, 6]
        ];
        let sum = 0
    for ( let i = 0; i < arr.length ; i++){
        for ( let j = 0 ; j < arr[i].length ; j++){
            if ( i == j){
                sum = sum + arr[i][j]
            }
        } console.log("  đường chéo chính là : " + sum)
    }

    </script>
</body>

